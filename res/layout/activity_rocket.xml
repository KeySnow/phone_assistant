<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.view.MyActionbar
        android:id="@+id/ma_activity_rocket_my_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.view.MyProgressView
        android:id="@+id/mpv_activity_rocket_my_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:gravity="center">

        <ListView
            android:id="@+id/lv_activity_rocket_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

        <ProgressBar
            android:id="@+id/pb_activity_rocket_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <CheckBox
            android:id="@+id/cb_activity_rocket_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_activity_rocket_kill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/selector_activity_rocket_kill_background"
            android:gravity="center"
            android:text="清除进程" />
    </LinearLayout>

</LinearLayout>