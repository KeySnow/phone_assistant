<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.activity.LeadActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_lead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <TextView 
        android:id="@+id/tv_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_enter_text"
        android:textSize="@dimen/tv_enter_textSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="enter"
        android:clickable="true"
        android:layout_margin="@dimen/tv_enter_margin"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/linearlayout_marginBottom"
        android:layout_alignParentBottom="true">
        
        <ImageView 
            android:id="@+id/iv_index1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/iv_index_margin"
            android:src="@drawable/adware_style_default"/>
        <ImageView 
            android:id="@+id/iv_index2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/iv_index_margin"
            android:src="@drawable/adware_style_default"/>
        <ImageView 
            android:id="@+id/iv_index3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/iv_index_margin"
            android:src="@drawable/adware_style_default"/>
    </LinearLayout>

</RelativeLayout>
